<h1> <%=  @cocktail.name %> </h1>

<%  @cocktail.doses.each do |dose|  %>

<ul>

<li> <%= dose.description %> - <%= dose.ingredient.name %>  <%= link_to "Destroy this dose", dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" }  %> </li>

</ul>
<% end %>
<h1>Add a new dose</h1>
<%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.association :ingredient, as: :select %>
  <%= f.button :submit %>
<% end %>
